{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Webpack",
      "program": "${workspaceFolder}/node_modules/webpack/bin/webpack.js",
      "args": [
        "--config",
        "${workspaceFolder}/packages/pigly-example/webpack.config.js"
      ],
      "cwd": "${workspaceFolder}/packages/pigly-example",
      "outFiles": [
        "${workspaceFolder}/**/*.js"
      ],
      "sourceMaps": true
    }
  ]
}