{
  "name": "pigly",
  "version": "0.1.0",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/",
  "typings": "dist/esm/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "chai": "^4.2.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.1.0",
    "typescript": "^3.4.5"
  },
  "scripts": {
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc --build tsconfig.build.esm.json",
    "build:cjs": "tsc --build tsconfig.build.cjs.json",
    "test": "nyc mocha test/**/*.spec.ts"
  },
  "nyc": {
    "exclude": [
      "node_modules/",
      "test/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "source-map-support/register",
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html",
      "lcov"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "files": [
    "/dist/*",
    "README.md"
  ]
}
